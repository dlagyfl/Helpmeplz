<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray">

    <Button
        android:id="@+id/button_findFriend"
        android:layout_width="231dp"
        android:layout_height="93dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="152dp"
        android:layout_marginEnd="8dp"
        android:text="아이디로 친구 찾기"
        android:fontFamily="@font/강원교육튼튼"
        android:background="@drawable/button_circle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button_myGroup"
        android:layout_width="231dp"
        android:layout_height="93dp"
        android:layout_marginTop="30dp"
        android:text="나의 그룹"
        android:fontFamily="@font/강원교육튼튼"
        android:background="@drawable/button_circle"
        app:layout_constraintEnd_toEndOf="@+id/button_findFriend"
        app:layout_constraintStart_toStartOf="@+id/button_findFriend"
        app:layout_constraintTop_toBottomOf="@+id/button_findFriend" />

    <Button
        android:id="@+id/button_myTable"
        android:layout_width="231dp"
        android:layout_height="93dp"
        android:layout_marginTop="30dp"
        android:text="내 시간표"
        android:fontFamily="@font/강원교육튼튼"
        android:background="@drawable/button_circle"
        app:layout_constraintEnd_toEndOf="@+id/button_myGroup"
        app:layout_constraintStart_toStartOf="@+id/button_myGroup"
        app:layout_constraintTop_toBottomOf="@+id/button_myGroup" />

    <Button
        android:id="@+id/button_logout"
        android:layout_width="231dp"
        android:layout_height="93dp"
        android:layout_marginTop="30dp"
        android:text="로그아웃"
        android:fontFamily="@font/강원교육튼튼"
        android:background="@drawable/button_circle"
        app:layout_constraintEnd_toEndOf="@+id/button_myTable"
        app:layout_constraintStart_toStartOf="@+id/button_myTable"
        app:layout_constraintTop_toBottomOf="@+id/button_myTable" />

    <Button
        android:id="@+id/button_find_null_time"
        android:layout_width="231dp"
        android:layout_height="93dp"
        android:layout_marginTop="120dp"
        android:text="Find Null Time"
        app:layout_constraintEnd_toEndOf="@+id/button_myTable"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/button_myTable"
        app:layout_constraintTop_toBottomOf="@+id/button_myTable" />
</androidx.constraintlayout.widget.ConstraintLayout>