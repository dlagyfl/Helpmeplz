<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/button_MyFriend"
        android:layout_width="231dp"
        android:layout_height="93dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="150dp"
        android:layout_marginEnd="8dp"
        android:text="친구목록"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button_myGroup"
        android:layout_width="231dp"
        android:layout_height="93dp"
        android:layout_marginTop="30dp"
        android:text="나의 그룹"
        app:layout_constraintEnd_toEndOf="@+id/button_MyFriend"
        app:layout_constraintStart_toStartOf="@+id/button_MyFriend"
        app:layout_constraintTop_toBottomOf="@+id/button_MyFriend" />

    <Button
        android:id="@+id/button_myTable"
        android:layout_width="231dp"
        android:layout_height="93dp"
        android:layout_marginTop="30dp"
        android:text="내 시간표"
        app:layout_constraintEnd_toEndOf="@+id/button_myGroup"
        app:layout_constraintStart_toStartOf="@+id/button_myGroup"
        app:layout_constraintTop_toBottomOf="@+id/button_myGroup" />

    <Button
        android:id="@+id/button_logout"
        android:layout_width="231dp"
        android:layout_height="93dp"
        android:layout_marginTop="30dp"
        android:text="로그아웃"
        app:layout_constraintEnd_toEndOf="@+id/button_myTable"
        app:layout_constraintStart_toStartOf="@+id/button_myTable"
        app:layout_constraintTop_toBottomOf="@+id/button_myTable" />
</androidx.constraintlayout.widget.ConstraintLayout>