<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray">

    <TextView
        android:id="@+id/textView_add_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="176dp"
        android:fontFamily="@font/GmarketSansTTFBold"
        android:text="이름"
        android:textColor="@color/faded_yellow"
        android:textSize="34sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="친구 추가 신청을 했습니다"
        android:fontFamily="@font/GmarketSansTTFBold"
        android:textColor="#FFFFFF"
        android:textSize="34sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView_add_id" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="176dp"
        android:text="님께서"
        android:fontFamily="@font/GmarketSansTTFBold"
        android:textColor="#FFFFFF"
        android:textSize="34sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.077"
        app:layout_constraintStart_toEndOf="@+id/textView_add_id"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button_accept"
        android:layout_width="147dp"
        android:layout_height="81dp"
        android:layout_marginTop="208dp"
        android:background="@drawable/button_circle"
        android:fontFamily="@font/GmarketSansTTFBold"
        android:text="수락하기"
        android:textSize="20sp"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView5" />

    <Button
        android:id="@+id/button_refuse"
        android:layout_width="147dp"
        android:layout_height="81dp"
        android:layout_marginTop="20dp"
        android:text="거절하기"
        android:textSize="20sp"
        android:background="@drawable/button_circle"
        android:fontFamily="@font/GmarketSansTTFBold"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="@+id/button_accept"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/button_accept"
        app:layout_constraintTop_toBottomOf="@+id/button_accept" />

</androidx.constraintlayout.widget.ConstraintLayout>